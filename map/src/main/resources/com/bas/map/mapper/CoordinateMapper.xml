<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bas.map.mapper.CoordinateMapper">
    <resultMap id="coordinateResult" type="Coordinate">
        <id property="id" column="ID" />
        <result property="longitude" column="LONGITUDE" />
        <result property="latitude" column="LATITUDE" />
        <result property="markerNumber" column="MARKER_NUMBER" />
    </resultMap>
    <select id="getCoordinateById" parameterType="java.lang.Long" resultType="coordinateResult">
        SELECT ID, LONGITUDE, LATITUDE, MARKER_NUMBER FROM COORDINATES
        WHERE ID = #{id}
    </select>
    <select id="getCoordinateByShapeId" parameterType="java.lang.Long" resultType="coordinateResult">
        SELECT * FROM COORDINATES WHERE ID_SHAPE = #{id}
    </select>
</mapper>