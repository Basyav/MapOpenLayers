<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias type="com.bas.map.model.Coordinate" alias="Coordinate"></typeAlias>
        <typeAlias type="com.bas.map.model.Shape" alias="Shape"></typeAlias>
        <typeAlias type="com.bas.map.model.ShapeType" alias="ShapeType"></typeAlias>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="JNDI">
                <property name="data_source" value="java:/comp/env/jdbc/openlayers"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="com/bas/map/mapper/ShapeMapper.xml"></mapper>
        <mapper resource="com/bas/map/mapper/CoordinateMapper.xml"></mapper>
        <mapper resource="com/bas/map/mapper/ShapeTypeMapper.xml"></mapper>
    </mappers>
</configuration>